<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/subscriber_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_sub" />

    <TextView
        android:id="@+id/subscriber_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/subscriber_image"
        app:layout_constraintTop_toTopOf="@id/subscriber_image"
        app:layout_constraintBottom_toBottomOf="@id/subscriber_image"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="XXXXXX"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/subscriber_image"
        app:layout_constraintBottom_toBottomOf="@id/subscriber_image"
        android:layout_marginEnd="16dp" />

