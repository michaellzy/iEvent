<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/activity_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/activity_placeholder"
        android:contentDescription="@string/activity_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Activity Name:"
        app:layout_constraintTop_toTopOf="@id/activity_image"
        app:layout_constraintStart_toEndOf="@id/activity_image"
        app:layout_constraintEnd_toStartOf="@id/favorite_icon"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/activity_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Time:"
        app:layout_constraintTop_toBottomOf="@id/activity_name"
        app:layout_constraintStart_toStartOf="@id/activity_name"
        app:layout_constraintEnd_toStartOf="@id/favorite_icon" />

    <TextView
        android:id="@+id/activity_prize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price:"
        app:layout_constraintTop_toBottomOf="@id/activity_time"
        app:layout_constraintStart_toStartOf="@id/activity_time"
        app:layout_constraintEnd_toStartOf="@id/favorite_icon" />

    <TextView
        android:id="@+id/activity_organizer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Organizer:"
        app:layout_constraintTop_toBottomOf="@id/activity_prize"
        app:layout_constraintStart_toStartOf="@id/activity_prize"
        app:layout_constraintEnd_toStartOf="@id/favorite_icon"
        app:layout_constraintBottom_toBottomOf="@id/activity_image" />

    <ImageView
        android:id="@+id/favorite_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:contentDescription="@string/favorite"
        android:src="@drawable/ic_love"
        app:layout_constraintBottom_toBottomOf="@id/activity_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/activity_image"
        app:layout_constraintVertical_bias="0.833" />

</androidx.constraintlayout.widget.ConstraintLayout>