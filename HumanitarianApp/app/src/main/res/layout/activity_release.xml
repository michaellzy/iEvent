<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReleaseActivity">



    <ImageView
        android:id="@+id/imageView_release_back_btn"
        android:layout_width="36dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow" />

    <!-- Name of Activity Input -->



    <EditText
        android:id="@+id/release_activity_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Please fill in the name of activity"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/imageView_release_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9"
        tools:layout_editor_absoluteY="138dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/release_activity_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Please fill in the time of activity"
        app:layout_constraintEnd_toEndOf="@id/release_activity_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/release_activity_name"
        app:layout_constraintTop_toBottomOf="@id/release_activity_name" />


    <EditText
        android:id="@+id/release_activity_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:inputType="number"
        android:hint="Please fill in the price of activity"
        app:layout_constraintEnd_toEndOf="@id/release_activity_time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/release_activity_time"
        app:layout_constraintTop_toBottomOf="@id/release_activity_time" />


    <EditText
        android:id="@+id/release_activity_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:inputType="text"
        android:hint="Please fill in the location of activity"
        app:layout_constraintEnd_toEndOf="@id/release_activity_price"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/release_activity_price"
        app:layout_constraintTop_toBottomOf="@id/release_activity_price" />


    <!-- Confirm Button -->


    <ImageView
        android:id="@+id/imageView_release_upload_btn"
        android:layout_width="94dp"
        android:layout_height="92dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_upload"
        app:layout_constraintTop_toBottomOf="@id/release_activity_location"
        tools:layout_editor_absoluteX="42dp"
        tools:ignore="MissingConstraints" />




    <ImageView
        android:id="@+id/imageView_uploaded"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="284dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintStart_toEndOf="@id/imageView_release_upload_btn"
        app:layout_constraintTop_toBottomOf="@id/release_activity_location"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
